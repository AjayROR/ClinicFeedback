    <tr>
	  <th>Name </th>
    <th>Email ID </th>
    </tr>
            
            <% @department_doctors.each do |doctor| %>
             <tr> 
              <td> <%= doctor.name %>  </td>
              <td> <%= doctor.email%>  </td>
            </tr>
            <% end %>
  
</table>
            <%= will_paginate @department_doctors %>
   <% else %>
   <b>Sorry, No Docs added yet for this Department !  </b>
